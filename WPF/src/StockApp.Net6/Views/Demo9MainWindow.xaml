<Window  x:Class="StockApp.Net6.Views.Demo9MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockApp.Net6.Views" 
        xmlns:userControls="clr-namespace:StockApp.Net6.Views.UserControls"
        mc:Ignorable="d"
        Title="Demo9 -  MessageBox" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button x:Name="btnFire" Content="Fire" Width="100" Height="40" 
                Click="btnFire_Click" />
        <TextBlock Grid.Row="1" x:Name="tbInfo" FontSize="16" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
