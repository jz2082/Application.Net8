<Page x:Class="StockApp.Net8.Views.StockList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockApp.Net8.Views" 
      xmlns:converters="clr-namespace:StockApp.Net8.Resources.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StockList">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/StockAppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid  Margin="10,0,10,10">
        <Grid.Resources>
            <!-- Stock List -->
            <XmlDataProvider x:Key="StockSource" XPath="StockList">
                <x:XData>
                    <StockList xmlns="">
                        <Stock Name="Stock 1" MinPrice="240" MaxPrice="270" />
                        <Stock Name="Stock 2" MinPrice="180" MaxPrice="210" />
                        <Stock Name="Stock 3" MinPrice="80" MaxPrice="110" />
                    </StockList>
                </x:XData>
            </XmlDataProvider>
            <!-- Name item template -->
            <DataTemplate x:Key="nameItemTemplate">
                <Label Content="{Binding XPath=@Name}"/>
            </DataTemplate>
        </Grid.Resources>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/Images/watermark.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Stock list -->
        <Label Grid.Column="1" Style="{StaticResource headerTextStyle}">
            View Stock List
        </Label>
        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource listHeaderStyle}">
            <Label Style="{StaticResource listHeaderTextStyle}">Stock Names</Label>
        </Border>
        <ListBox Name="stockListBox" MouseDoubleClick="ListBox_MouseDoubleClick" Grid.Column="1" Grid.Row="2"
         ItemsSource="{Binding Source={StaticResource StockSource}, XPath=Stock}"
         ItemTemplate="{StaticResource nameItemTemplate}">
        </ListBox>
    </Grid>
</Page>
