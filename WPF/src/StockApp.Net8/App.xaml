<Application x:Class="StockApp.Net8.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:StockApp.Net8.ViewModels"
             xmlns:userControls="clr-namespace:StockApp.Net8.Views.UserControls"
             xmlns:local="clr-namespace:StockApp.Net8">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Common.xaml" />
                <ResourceDictionary Source="/Resources/Styles/NavigationBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- HomeView UserControl -->
            <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
                <userControls:HomeView />
            </DataTemplate>
            <!-- PortfolioView UserControl -->
            <DataTemplate DataType="{x:Type viewModels:PortfolioViewModel}">
                <userControls:PortfolioView />
            </DataTemplate>
            <!-- BuyView UserControl -->
            <DataTemplate DataType="{x:Type viewModels:BuyViewModel}">
                <userControls:BuyView />
            </DataTemplate>
            <!-- SellView UserControl -->
            <DataTemplate DataType="{x:Type viewModels:SellViewModel}">
                <userControls:SellView />
            </DataTemplate>
            <!-- LoginView UserControl 
            <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                <userControls:LoginView />
            </DataTemplate>
            -->
            <!-- RegisterView UserControl 
            <DataTemplate DataType="{x:Type viewModels:RegisterViewModel}">
                <userControls:RegisterView />
            </DataTemplate>
            -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
